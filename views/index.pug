extends layout

block variables
  
  - var title = "The Tidy Squirrel"

block content
  #mainView.main
    #hContainer
      #menuIcon
        svg(viewbox='0 0 100 80' width='5vh' height='5vh')
          rect(width='100' height='15' rx='8')
          rect(y='30' width='100' height='15' rx='8')
          rect(y='60' width='100' height='15' rx='8')
      #menu.menu.off
        #menuClose.closeButton
          ion-icon(name='close-outline')
        #menuItems.itemContainer
          ul
            li#sessionsItem
              ion-icon(name='help-circle-outline')
              | My Sessions
            li#gamesItem
              ion-icon(name='library-outline')
              | My Games and Lists
            li#accountItem
              ion-icon(name='person-circle-outline')
              | My Account
            li#faqItem
              ion-icon(name='help-circle-outline')
              | FAQ
            li#aboutItem
              ion-icon(name='information-circle-outline')
              | About
            li#premiumItem
              ion-icon(name='star-outline')
              | Get Premium
            if user
              li#logoutItem
                ion-icon(name='log-out-outline')
                form(method="post" action="/logout")
                  button Logout
      #menuCatch.clickCatcher.off
      .login
        
        if user
          | Hello, #{user.profile.firstName} 
        else 
          a(href="/users/login") Login
    #homeView.view
      .pageTitle The Tidy Squirrel üêøÔ∏è
      #joinButton.button.blueBtn Join
      #createButton.button.greyBtn Create
      #codeInputGroup.inputGroup.off
        #codeInputLabel.inputLabel Enter Code:
        #codeInput.textInputCont
          input.textInput(type='text')
          .textClear
        #codeSubmit.submitButton.button.blueBtn Submit
        #codeError.errorText.off Wrong code. Please try again.

    #codeView.view.off
      .pageTitle The Tidy Squirrel üêøÔ∏è
      #codeGroup
        #codeTitle Your Code:
        #code 
      #codeButtons
        #shareButton.clickable
          ion-icon(name="share-outline")
        #copyButton.clickable
          ion-icon(name="copy-outline")
      #selectButton.submitButton.button.greenBtn Select Games

    #selectView.view.off
      #selectTitle.pageTitle Select Games üêøÔ∏è
      #selectCodeDisplay.codeDisplay Your Code:
      #addGamesContainer
        #addGamesTitle Add Games
        #addGamesInputCont.textInputCont
          form(onsubmit="return textSubmit('#addGamesInput')")
            input.textInput(type='text')#addGamesInput
            input.textSubmit(type='submit' value='')
      #selectLists
      #gameSubmit.button.greenBtn(type='submit' value='')
        | Submit These Games
    
    #postSelectView.view.off
      #postSelectTitle.pageTitle Waiting... üêøÔ∏è
      #postSelectContainer

    #voteView.view.off
      #voteTitle.pageTitle Voting üêøÔ∏è
      #voteContainer

    #postVoteView.view.off
      #postVoteTitle.pageTitle Waiting... üêøÔ∏è
      #postVoteContainer
    
    #playView.view.off
      #playTitle.pageTitle Start Playing! üêøÔ∏è
      #playInfo Here are the games your group selected, beginning with the game you want to play most!
      #playContainer

    #sessionsView.pop.off
      #sessionsClose.closeButton
        ion-icon(name='close-outline')
      #sessionsTitle.pageTitle My Sessions üêøÔ∏è
      #sessionsContainer
      
    #gamesView.pop.off
      #gamesClose.closeButton
        ion-icon(name='close-outline')
      #gamesTitle.pageTitle Games and Lists üêøÔ∏è
      ion-icon(name="add-circle-outline" onclick="toggleGamesAdder()")#addListButton
      div#gamesAdderContainer
        div.gamesAdder.slideDown.off(onclick="showMenuAddGame()")
          div Add Game
        div.gamesAdder.slideDown.off(onclick="showMenuAddList()")
          div Add List
      div#menuAddGamesContainer.slideDown.off
        #menuAddGamesTitle Add Games
        #menuAddGamesInputCont.textInputCont
          form(onsubmit="return textSubmit('#menuAddGamesInput')")
            input.textInput(type='text')#menuAddGamesInput
            input.textSubmit(type='submit' value='')
      div#menuAddListContainer.slideDown.off
        #menuAddListTitle Add List
        #menuAddListInputCont.textInputCont
          form(onsubmit='return addList()')
            input.textInput(type='text')#menuAddListInput
            input.textSubmit(type='submit' value='')
      #gamesContainer
      #gamesContextContainer.off
      #listContextContainer.off
      #contextShadow.off


  #copiedAlert Code copied to clipboard!
  #backAlert.off Press back one more time to leave the app
  #backArrow.off
    ion-icon(name="caret-back-outline")
  #listsContainer
  #sessionContainer
//-
  #report
    p name: #{appEnv.name}
    p port: #{appEnv.port}
    p bind: #{appEnv.bind}
    p urls: #{appEnv.urls}  
    p url: #{appEnv.url}
    p isLocal: #{appEnv.isLocal}
    p redirect_uri: #{redirect_uri}
